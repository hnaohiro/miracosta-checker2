<div class="box">
  <div class="box-header">
    <h3 class="box-title">Room</h3>
    <div class="pull-right box-tools">
      <%= link_to '+', new_target_date_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table">
      <thead>
        <th>Date</th>
        <th>Enabled</th>
      </thead>
      <tbody>
        <% @target_dates.each do |target_date| %>
          <tr>
            <td><%= link_to target_date.date, edit_target_date_path(target_date) %></td>
            <td><%= target_date.enabled %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
