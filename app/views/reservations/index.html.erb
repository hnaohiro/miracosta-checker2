<div class="box">
  <div class="box-header">
    <h3 class="box-title">Reservations</h3>
  </div>
  <div class="box-body">
    <table class="table">
      <thead>
        <tr>
          <th>DateTime</th>
          <th>Reservable Count</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td>
              <%= link_to reservation do %>
                <%= reservation.created_at.strftime('%Y/%m/%d %H:%M') %>
              <% end %>
            </td>
            <td><%= reservation.reservable_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
