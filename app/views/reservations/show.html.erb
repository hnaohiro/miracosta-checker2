<div class="box">
  <div class="box-header">
    <h3 class="box-title">Reservation Status at (<%= @reservation.created_at.strftime('%Y/%m/%d %H:%M') %>)</h3>
  </div>
  <div class="box-body">
    <table class="table">
      <thead>
        <tr>
          <th>Room</th>
          <th>Date</th>
          <th>Reservable</th>
        </tr>
      </thead>
      <tbody>
        <% @reservation.reservation_details.each do |detail| %>
          <tr>
            <td><%= detail.room.name %></td>
            <td><%= detail.target_date.date %></td>
            <td>
              <% if detail.reservable %>
                <%= link_to '○', detail.reservable_link, target: '_blank' %>
              <% else %>
                ×
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
