<div class="box">
  <div class="box-header">
    <h3 class="box-title">Room</h3>
    <div class="pull-right box-tools">
      <%= link_to '+', new_room_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="box-body">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Enabled</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= link_to room.name, edit_room_path(room) %></td>
            <td><%= room.code %></td>
            <td><%= room.enabled %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
